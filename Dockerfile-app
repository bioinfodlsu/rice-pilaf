FROM tiangolo/uwsgi-nginx-flask:python3.10

ADD dependencies /app/dependencies
WORKDIR /app

RUN set -ex 
RUN apt-get update \
  && apt-get install -y \
  build-essential \
  git \
  libcurl4-openssl-dev \
  libffi-dev \
  libfontconfig1-dev \
  libssl-dev \
  libxml2-dev \
  python3-dev \
  python3-pip \
  r-base

RUN pip3 install -r dependencies/requirements-app.txt

# Install mcdp2
RUN cd ../ \
  && git clone https://github.com/fmfi-compbio/mcdp2 \
  && cd mcdp2 \
  && pip3 install . \
  && cd ../app

COPY . /app

RUN Rscript --vanilla dependencies/install-libraries-app.r
